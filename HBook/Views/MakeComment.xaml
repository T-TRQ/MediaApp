<Window x:Class="HBook.Views.MakeComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HBook.Views"
        mc:Ignorable="d"
        Title="MakeComment" Height="300" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical">
            
            <Label Content="Comment" FontSize="18" 
                   FontWeight="Heavy" Margin="20,0,0,0"/>
            
            <TextBox Width="450" Height="200" 
                     x:Name="MakeCommentTextbox"/>
            
            <Button Content="Publish comment" Margin="320,5,70,0"
                    x:Name="PublishCommentButton" FontSize="16"/>
            
        </StackPanel>
    </Grid>
</Window>
